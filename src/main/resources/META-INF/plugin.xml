<idea-plugin>
    <id>com.github.slampy97.plugintemplate</id>
    <name>plugin_template</name>
    <vendor>slampy97</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.slampy97.plugintemplate.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.slampy97.plugintemplate.services.MyProjectService"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.slampy97.plugintemplate.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
